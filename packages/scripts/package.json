{
    "name": "@app-config/scripts",
    "version": "0.16.0",
    "description": "Scripts for template-electron-react.",
    "type": "module",
    "exports": {
        ".": "./dist/index.js"
    },
    "homepage": "https://github.com/yifanwww/template-electron-react#readme",
    "license": "MIT",
    "author": "yifanwww <yifanw1101@gmail.com> (https://github.com/yifanwww)",
    "bugs": {
        "url": "https://github.com/yifanwww/template-electron-react/issues"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yifanwww/template-electron-react.git",
        "directory": "configs/scripts"
    },
    "bin": {
        "app-main": "./bin/app-main.js",
        "jest": "./node_modules/jest/bin/jest.js",
        "mkdir-working": "./bin/mkdir-working.js",
        "run-build": "./bin/run-build.js",
        "run-unpacked": "./bin/run-unpacked.js",
        "unit-test": "./bin/unit-test.js"
    },
    "scripts": {
        "build-scripts": "concurrently -n dist,types \"pnpm run build-scripts:dist\" \"pnpm run build-scripts:types\"",
        "build-scripts:dist": "tsc --project tsconfigs/tsconfig.dist.json",
        "build-scripts:types": "tsc --project tsconfigs/tsconfig.types.json",
        "clean": "rimraf --glob dist tsconfigs/*.tsbuildinfo",
        "format": "prettier --write \"**/*.{cjs,cts,css,html,js,jsx,mjs,mts,json,less,scss,ts,tsx,yaml,yml}\"",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "typecheck": "tsc --project tsconfig.json --noEmit --incremental false"
    },
    "dependencies": {
        "@swc/jest": "catalog:",
        "camelcase": "catalog:",
        "chalk": "catalog:",
        "esbuild-loader": "catalog:",
        "fork-ts-checker-webpack-plugin": "catalog:",
        "identity-obj-proxy": "catalog:",
        "jest": "catalog:",
        "jest-environment-jsdom": "catalog:",
        "jest-watch-typeahead": "catalog:",
        "jsonc-parser": "catalog:",
        "semver": "catalog:",
        "source-map-loader": "catalog:",
        "text-table": "catalog:",
        "webpack": "catalog:",
        "whatwg-fetch": "catalog:"
    },
    "devDependencies": {
        "@app-config/eslint-config": "workspace:*",
        "@app-config/tsconfigs": "workspace:*",
        "@jest/types": "catalog:",
        "@types/node": "catalog:",
        "@types/semver": "catalog:",
        "@types/text-table": "catalog:",
        "concurrently": "catalog:",
        "eslint": "catalog:",
        "prettier": "catalog:",
        "rimraf": "catalog:",
        "typescript": "catalog:"
    }
}
