{
    "name": "@app-config/eslint-config",
    "version": "0.16.0",
    "description": "ESLint configurations for template-electron-react.",
    "type": "module",
    "exports": "./dist/index.js",
    "private": true,
    "scripts": {
        "build": "concurrently -n dist,types \"pnpm run build:dist\" \"pnpm run build:types\"",
        "build:dist": "tsc --project tsconfigs/tsconfig.dist.json",
        "build:types": "tsc --project tsconfigs/tsconfig.types.json",
        "clean": "rimraf --glob dist tsconfigs/*.tsbuildinfo",
        "format": "prettier --write \"**/*.{cjs,cts,css,html,js,jsx,mjs,mts,json,less,scss,ts,tsx,yaml,yml}\"",
        "typecheck": "tsc --project tsconfig.json --noEmit --incremental false"
    },
    "dependencies": {
        "@eslint/js": "catalog:",
        "confusing-browser-globals": "catalog:",
        "eslint-plugin-import": "catalog:",
        "eslint-plugin-jest": "catalog:",
        "eslint-plugin-prettier": "catalog:",
        "eslint-plugin-react": "catalog:",
        "eslint-plugin-react-hooks": "catalog:",
        "globals": "catalog:",
        "typescript-eslint": "catalog:"
    },
    "devDependencies": {
        "@app-config/tsconfigs": "workspace:^",
        "@types/confusing-browser-globals": "catalog:",
        "concurrently": "catalog:",
        "eslint": "catalog:",
        "prettier": "catalog:",
        "rimraf": "catalog:",
        "typescript": "catalog:"
    },
    "peerDependencies": {
        "eslint": "catalog:",
        "prettier": "catalog:"
    }
}
