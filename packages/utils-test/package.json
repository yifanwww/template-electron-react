{
    "name": "@tecra/utils-test",
    "version": "0.8.0",
    "description": "Test utils used for tecra.",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "typings": "lib/index.d.ts",
    "homepage": "https://github.com/YSoftwareRepo/template-electron-cra#readme",
    "license": "MIT",
    "author": "yifanwww <yifanw1101@gmail.com> (https://github.com/yifanwww)",
    "bugs": {
        "url": "https://github.com/YSoftwareRepo/template-electron-cra/issues"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/YSoftwareRepo/template-electron-cra.git",
        "directory": "packages/utils-test"
    },
    "scripts": {
        "build": "concurrently -n esm,types \"npm run build:esm\" \"npm run build:types\"",
        "build:esm": "tsc --project tsconfigs/tsconfig.esm.json",
        "build:types": "tsc --project tsconfigs/tsconfig.types.json",
        "clean": "rimraf coverage lib tsconfigs/*.tsbuildinfo",
        "dev": "npm run build:esm -- --watch",
        "format": "format-code",
        "lint": "eslint .",
        "pre-commit": "lint-staged",
        "test-coverage": "skip-npm-script"
    },
    "devDependencies": {
        "@tecra/eslint-config": "*",
        "@tecra/global-types": "*",
        "@tecra/scripts": "*",
        "@tecra/tsconfigs": "*"
    }
}
