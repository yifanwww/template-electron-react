{
    "name": "@app/common",
    "version": "0.16.0",
    "description": "Common code for electron main process and electron renderer process.",
    "type": "module",
    "exports": {
        "./apis/app": "./lib/apis/app/index.js",
        "./apis/logger": "./lib/apis/logger/index.js",
        "./apis/types": "./lib/apis/types/index.js",
        "./types": "./lib/types/index.js",
        "./utils": "./lib/utils/index.js"
    },
    "private": true,
    "scripts": {
        "build": "concurrently -n lib,types \"pnpm run build:lib\" \"pnpm run build:types\"",
        "build:lib": "tsc --project tsconfigs/tsconfig.lib.json",
        "build:types": "tsc --project tsconfigs/tsconfig.types.json",
        "clean": "rimraf --glob coverage lib tsconfigs/*.tsbuildinfo",
        "dev": "pnpm run build:lib --watch",
        "format": "prettier --write \"**/*.{cjs,cts,css,html,js,jsx,mjs,mts,json,less,scss,ts,tsx,yaml,yml}\"",
        "lint": "eslint .",
        "lint-fix": "eslint . --fix",
        "test": "unit-test",
        "test-full": "unit-test",
        "typecheck": "tsc --project tsconfig.json --noEmit --incremental false"
    },
    "devDependencies": {
        "@app-config/eslint-config": "workspace:*",
        "@app-config/scripts": "workspace:*",
        "@app-config/tsconfigs": "workspace:*",
        "@jest/globals": "catalog:",
        "concurrently": "catalog:",
        "eslint": "catalog:",
        "prettier": "catalog:",
        "rimraf": "catalog:",
        "typescript": "catalog:"
    }
}
